<?xml version="1.0" encoding="utf-8"?>
<!-- This is the HORIZONTAL version -->
<LinearLayout android:id="@+id/noStorage"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="vertical"
		android:layout_weight="50" android:layout_width="0dip"
		android:layout_height="fill_parent" android_gravity="center">
		<TextView android:id="@+id/errorTitle" android:text="Sorry!"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="center_horizontal" android:lineSpacingMultiplier="1.2"
			android:textStyle="bold" android:textSize="24sp" android:paddingTop="12sp" />
		<TextView android:id="@+id/errorMessage" android:text="Can't save your life."
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="center_horizontal" android:textSize="20sp" />
	</LinearLayout>
	<ImageView 
		android:layout_weight="50" android:layout_width="0dip"
		android:layout_height="fill_parent" android:src="@drawable/redbuoy" />
</LinearLayout>
