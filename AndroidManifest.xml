<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.textuality.lifesaver2" android:versionCode="2" android:versionName="0.9">
	<uses-sdk android:minSdkVersion="4" />
	<application android:icon="@drawable/lsicon" android:label="@string/app_name">
		<activity android:name=".LifeSaver" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".Saver" android:label="@string/app_name">
			<intent-filter>
				<action android:name="net.storier.feedmapper.VIEW" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".Restorer" android:label="@string/app_name">
			<intent-filter>
				<action android:name="net.storier.feedmapper.VIEW" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".NoStorage" android:label="@string/app_name">
			<intent-filter>
				<action android:name="net.storier.feedmapper.VIEW" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
	</application>
	<uses-permission android:name="android.permission.READ_CONTACTS" />
	<uses-permission android:name="android.permission.WRITE_CONTACTS" />
	<uses-permission android:name="android.permission.READ_SMS" />
	<uses-permission android:name="android.permission.RECEIVE_SMS" />
	<uses-permission android:name="android.permission.WRITE_SMS" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest> 